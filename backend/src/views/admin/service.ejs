    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.service-select').forEach(button => {
                button.addEventListener('click', function() {
                    const name = this.getAttribute('name-service');
                    const unit = this.getAttribute('unit-service');
                    const unitcost = this.getAttribute('unit-cost-service');
                    const period = this.getAttribute('warranty-period-service');
                    const serviceId = this.getAttribute('service-id');
                    
                    document.getElementById('service-name').textContent = name;
                    document.getElementById('service-unit').textContent = unit;
                    document.getElementById('service-unit-cost').textContent = unitcost;
                    document.getElementById('service-warranty-period').textContent = period;
    
                    // Store the serviceId in a data attribute on the confirm button
                    document.getElementById('confirmCancelButton').setAttribute('data-service-id', serviceId);
    
                    document.getElementById('confirmationModal').style.display = 'flex';
                });
            });
    
            document.getElementById('closeModalButton').addEventListener('click', function() {
                document.getElementById('confirmationModal').style.display = 'none';
            });
    
            document.getElementById('confirmCancelButton').addEventListener('click', function() {
                const serviceId = this.getAttribute('data-service-id');
    
                fetch('/admin/service/delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ serviceId: serviceId }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Handle successful deletion (e.g., remove row from table, show success message, etc.)
                        console.log('Service deleted successfully');
                        document.querySelector(`button[service-id="${serviceId}"]`).closest('tr').remove();
                        alert('Dịch Vụ Đã Được Xoá.');
                    } else {
                        // Handle error
                        console.error('Error deleting service:', data.message);
                        alert('Xoá dịch vụ thất bại.');
                    }
    
                    // Close the modal
                    document.getElementById('confirmationModal').style.display = 'none';
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xoá dịch vụ.');
                    document.getElementById('confirmationModal').style.display = 'none';
                });
            });
        });
    </script>
    
    <script>


        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('addServiceButton').addEventListener('click', function() {
                document.getElementById('addServiceModal').style.display = 'flex';
            });
        
            document.getElementById('closeAddServiceModalButton').addEventListener('click', function() {
                document.getElementById('addServiceModal').style.display = 'none';
            });
        
            document.getElementById('addServiceForm').addEventListener('submit', function(event) {
                event.preventDefault();
        
                const newService = {
                    loaidieutri: document.getElementById('newServiceName').value,
                    donvi: document.getElementById('newServiceUnit').value,
                    dongia: document.getElementById('newServiceCost').value,
                    ThoiGianBaoHanh: document.getElementById('newServiceWarranty').value
                };
        
                fetch('/admin/service/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(newService),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const tableBody = document.querySelector('.appointment-table tbody');
                        const newRow = document.createElement('tr');
                        newRow.innerHTML = `
                            <td>${newService.loaidieutri}</td>
                            <td>${newService.donvi}</td>
                            <td>${newService.dongia}</td>
                            <td>${newService.ThoiGianBaoHanh}</td>
                            <td>
                                <button class="service-select"
                                        name-service="${newService.loaidieutri}"
                                        unit-service="${newService.donvi}"
                                        unit-cost-service="${newService.dongia}"
                                        warranty-period-service="${newService.ThoiGianBaoHanh}"
                                        service-id="${data.serviceId}">
                                        Xoá
                                </button>
                            </td>
                        `;
                        tableBody.appendChild(newRow);
        
                        document.getElementById('addServiceForm').reset();
                        document.getElementById('addServiceModal').style.display = 'none';
                        alert('Danh Mục Điều Trị Mới Đã Được Thêm.');
                    } else {
                        alert('Thêm danh mục thất bại.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi thêm danh mục.');
                });
            });
        });
        
        
    </script>

